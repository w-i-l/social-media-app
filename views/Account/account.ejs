<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimal-ui    " >
    <title>Account</title>
    <link rel="icon" type="image/x-icon" href='icons/logo.png'>
    <link rel="stylesheet" href="/css/account.css">
    <link rel="stylesheet" href="css/colors.css">
</head>
<body>

    <div class="background"></div>

    <%- include('../Menu/menu.ejs') %>

    <div class="account">

        <div class='credientials'>
            <div class="greet">
                <img id='profile_picture' src=<%= locals.user.profile_picture %> >
                <p>Welcome back,&NonBreakingSpace;</p>
                <h3><%- locals.user.username %></h3>
            </div>
            
        </div>

        <!-- <div class='credientials'>
            <p>email:</p>
            <h3><%- locals.user.email %></h3>
        </div> -->
        <div class="info">
            <h4>Your posts</h4>
            <a href="/edit_account">&#x2699;</a>
        </div>
        
        <div class='posts'>
            <% var posts = locals.userPosts %>
            <% var ids = locals.ids %>
            <% for(let i=0; i<posts.length; i++){ %>
                <%- include('../Post/post.ejs', {post: posts[i], id:ids[i]}); %>
            <% }; %>
        </div>

        <form method="post">
            <input id="logout" type="submit" value="Log out"/>
        </form>
    </div>


</body>
</html>