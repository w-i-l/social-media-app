<head>
    <link rel="stylesheet" href="/css/post.css">
    <link rel="stylesheet" href="/css/colors.css">
</head>

<div class="post">
    <div class="user">
        <img id='profile' src="<%= post.profile_picture %>"
        <a href="/user/<%- post.username %>"><%- post.username %></a>
    </div>
    <img src="<%= post.image %>">
    <hr>
    <div class="description">
        <p><%= post.description %></p>
    </div>
</div>